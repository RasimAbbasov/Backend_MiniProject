@model Slider
<div class="container">
    <div class="row justify-content-center">
        <form method="post" asp-action="edit" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Subtitle"></label>
                <input asp-for="Subtitle" class="form-control" />
                <span class="text-danger" asp-validation-for="Subtitle"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonLink"></label>
                <input asp-for="ButtonLink" class="form-control" />
                <span class="text-danger" asp-validation-for="ButtonLink"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonText"></label>
                <input asp-for="ButtonText" class="form-control" />
                <span class="text-danger" asp-validation-for="ButtonText"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order"></label>
                <input asp-for="Order" class="form-control" />
                <span class="text-danger" asp-validation-for="Order"></span>
            </div>
            <div class="form-group">
                <label asp-for="File"></label>
                <input accept="image/*" asp-for="File" class="form-control" id="imgPreview"  />
                <input type="hidden" asp-for="Image" value="@Model.Image" />
                <img src="~/assets/image/bg-images/@Model.Image" height="150" alt="" />
                <div id="createBookImageContainer">
                </div>

                <span class="text-danger" asp-validation-for="File"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
@section scripts {
    @Html.Partial("_ValidationScriptsPartial")
}