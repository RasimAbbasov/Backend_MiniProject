 @model UserLoginVm
   <main>
        <!-- breadcrumb area start -->
        <div class="breadcrumb-area bg-img" data-bg="~/assets/img/banner/breadcrumb-banner.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="breadcrumb-wrap text-center">
                            <nav aria-label="breadcrumb">
                                <h1 class="breadcrumb-title">Login</h1>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Login</li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- breadcrumb area end -->

        <!-- login register wrapper start -->
        <div class="login-register-wrapper section-padding">
            <div class="container">
                <div class="member-area-from-wrap">
                    <div class="row justify-content-center">
                        <!-- Login Content Start -->
                        <div class="col-lg-6">
                            <div class="login-reg-form-wrap">
                                <h2>Sign In</h2>
                                <form action="#" method="post">
                                    <div class="single-input-item">
                                    <label asp-for="UserNameOrEmail"></label>
                                    <input asp-for="UserNameOrEmail" class="mb-0 form-control"
                                           placeholder="Enter username or email">
                                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                </div>
                                    <div class="single-input-item">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="mb-0 form-control"
                                           placeholder="Enter your password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="single-input-item">
                                        <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                            <div class="remember-meta">
                                                <label asp-for="RememberMe"></label>
                                                <input asp-for="RememberMe">
                                            <div  class="custom-control custom-checkbox">
                                            </div>
                                            </div>
                                            <a asp-action="forgotpassword" class="forget-pwd">Forget Password?</a>
                                        </div>
                                    </div>
                                    <div class="single-input-item">
                                    <button type="submit" class="btn btn-outlined">Login</button>
                                    <a asp-action="register">Register</a>
                                    </div>
                                </form>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                        </div>
                        <!-- Login Content End -->
                    </div>
                </div>
            </div>
        </div>
        <!-- login register wrapper end -->
    </main>